{
  "compilerOptions": {
    "strict": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "build"
  },
  "exclude": [
    "**/__tests__/**/*",
    "**/build/**/*"
  ],
  "include": [
    "src/**/*"
  ]
}
